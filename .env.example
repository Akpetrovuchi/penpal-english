# ==============================================
# ENVIRONMENT TEMPLATE
# ==============================================
# Copy this file to .env and fill in the real values

# Bot Token from BotFather
BOT_TOKEN=your_bot_token_here

# Database Connection
# For local dev: postgresql://username@localhost:5432/dbname
# For Heroku: postgres://user:pass@host:port/dbname
DATABASE_URL=postgresql://user:password@host:port/database

# OpenAI API Key
OPENAI_API_KEY=sk-proj-your_key_here

# GNews API Key
GNEWS_API_KEY=your_gnews_key

# YooKassa Payment Gateway
YOOKASSA_SHOP_ID=your_shop_id
YOOKASSA_SECRET_KEY=your_secret_key

# Webhook Settings
USE_WEBHOOK=false
WEBHOOK_URL=http://localhost:8443/yookassa/webhook
PORT=8443

# Admin User ID (Telegram)
ADMIN_ID=
